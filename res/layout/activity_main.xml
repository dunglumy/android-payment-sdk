<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout" >
    
    <Button 
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy by SMS with Appota UI"
        android:onClick="buySMSWithUI"/>
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy by SMS no UI"
        android:onClick="buySMSNoUI"/>
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy by card with UI"
        android:onClick="buyCardWithUI"/>
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy by card no UI"
        android:onClick="buyCardNoUI"/>
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy by bank no UI"
        android:onClick="buyBank"/>
    
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy by Paypal"
        android:onClick="buyPaypal"/>
    
    <com.appota.payment.widget.SDKButton 
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
